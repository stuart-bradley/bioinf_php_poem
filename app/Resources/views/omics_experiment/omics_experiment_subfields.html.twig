{# app/Resources/views/omics_experiment/omics_experiment_subfields.html.twig #}

{% block _omics_experiment_statuses_entry_row %}
    <li class="panel panel-body panel-default">
            {{ form_row(form.statusString) }}
            {{ form_row(form.date) }}
    </li>
{% endblock %}

{% block _omics_experiment_files_entry_row %}
    <li class="panel panel-body panel-default">
        {{ form_row(form.file) }}
    </li>
{% endblock %}

{% block _omics_experiment_omicsExperimentTypes_entry_row %}
    <li class="panel panel-body panel-default">
            {{ form_row(form.omicsExperimentTypeString) }}
        </li>
{% endblock %}

{% block _omics_experiment_omicsExperimentTypes_entry_omicsExperimentSubTypes_entry_row %}
    <li class="panel panel-body panel-default">
            {{ form_row(form.omicsExperimentSubTypeString) }}
    </li>
{% endblock %}

{% block _omics_experiment_omicsExperimentTypes_entry_omicsExperimentSubTypes_entry_samples_entry_row %}
    <li class="panel panel-body panel-default">
        {{ form_row(form.sampleName) }}
        {{ form_row(form.BCSampleID) }}
        <div class="progress" style="display:none">
            <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100"
                 aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                <span class="sr-only">100% Complete</span>
            </div>
        </div>
        {{ form_row(form.BCRunID) }}
        {{ form_row(form.BCExperimentID) }}
        {{ form_row(form.sampledDateTime) }}
        {{ form_row(form.sampledBy) }}
        {{ form_row(form.comments) }}
        {{ form_row(form.RNALaterTreated) }}
        {{ form_row(form.materialTypeString) }}
    </li>
{% endblock %}