{# app/Resources/views/experiment/index.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    {{ parent() }}
    <div class="experiment-index-div">
        <h1>Omics Experiments</h1>
        <table class="table table-bordered">
            <tr>
                <th>ID</th>
                <th>Date</th>
                <th>Author</th>
                <th>Title</th>
                <th>Description</th>
                <th></th>
            </tr>
            {% for exp in omics_experiments %}
                <tr>
                    <td>
                        {{exp.id}}
                    </td>
                    <td>
                        {{exp.requestedDate|date('Y-m-d')}}
                    </td>
                    <td>
                        {{exp.requestedBy}}
                    </td>
                    <td>
                        {{exp.projectName}}
                    </td>
                    <td>
                        {{ exp.description | raw }}
                    </td>
                    <td align="center" valign="middle" style="width:10%">
                        <a href="{{ path('omics_experiment_show', {'id': exp.id}) }}" class="btn btn-default">Show</a>
                    </td>
                </tr>
            {% endfor %}
        </table>
        <a href="{{ path('omics_experiment_new') }}" class="btn btn-primary btn-lg btn-block">New Experiment</a>
    </div>
{% endblock %}